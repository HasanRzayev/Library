<UserControl x:Class="Library.Pages.UserPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:viewmodels="clr-namespace:Library.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:UserViewModel}"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      TextElement.FontWeight="Regular"
      TextElement.FontSize="13"
      TextOptions.TextFormattingMode="Ideal"
      TextOptions.TextRenderingMode="Auto"
      FontFamily="{DynamicResource MaterialDesignFont}"

      Height="900" Width="1600">




    <Grid Background="#1282a2">
        <Border CornerRadius="52" BorderThickness="10" BorderBrush="White">
         

        </Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"  ></ColumnDefinition>
                <ColumnDefinition Width="2*"  ></ColumnDefinition>
                <ColumnDefinition Width="1*" ></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1" Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="9*" ></RowDefinition>
                </Grid.RowDefinitions>
                <ComboBox Grid.Row="0" Background="Gold"
  materialDesign:HintAssist.Hint="Search"
  materialDesign:HintAssist.HintOpacity=".26"
  IsEditable="True">
                   
                </ComboBox>
                <StackPanel Grid.Row="1" ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="True">
                    <ListView   ItemsSource="{Binding Books}" ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.VerticalScrollBarVisibility="Visible" Height="800" >
                        <ListView.View >
                            <GridView >
                                <GridViewColumn Width="130" Header="Name" 
              DisplayMemberBinding="{Binding Name}"  />
                                <GridViewColumn Width="130" Header="Pages"  
              DisplayMemberBinding="{Binding Pages}" />
                                <GridViewColumn Width="130" Header="YearPress" 
              DisplayMemberBinding="{Binding YearPress}" />
                                <GridViewColumn Width="110" Header="Themes" 
              DisplayMemberBinding="{Binding Themes}" />
                                <GridViewColumn Width="90" Header="Catagory" 
              DisplayMemberBinding="{Binding Catagory}" />
                                <GridViewColumn Width="130" Header="Author" 
              DisplayMemberBinding="{Binding Author}" />
                                <GridViewColumn Width="130" Header="Press" 
              DisplayMemberBinding="{Binding Press}" />
                                <GridViewColumn Width="130" Header="Comment" 
              DisplayMemberBinding="{Binding Comment}" />
                                <GridViewColumn Width="150" Header=" Delete Action">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button   Command="{Binding Path=DataContext.Remove, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}}" CommandParameter="{Binding}" 
              
                       Margin="0"
                       VerticalAlignment="Center"
                                        
                        >
                                                <materialDesign:PackIcon Kind="Plus" />
                                            </Button>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Width="150" Header=" Update Action">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button  Command="{Binding Path=DataContext.Update, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}}" CommandParameter="{Binding}" 
              
                       Margin="0"
                       VerticalAlignment="Center"
                                        
                        >
                                                <materialDesign:PackIcon Kind="Update"  Foreground="{DynamicResource darkmode_1}"  />

                                            </Button>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button HorizontalAlignment="Right" Margin="5,5,5,5"  Background="{DynamicResource esascolor}"
        Content="Add Row"  />
                </StackPanel>


            </Grid>
           
        </Grid>
    </Grid>


</UserControl>
